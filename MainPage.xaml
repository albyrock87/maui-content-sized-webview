             xmlns:controls="clr-namespace:SizeWebViewToContent.Controls"
             x:Class="SizeWebViewToContent.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <controls:ContentSizedWebView 
                x:Name="MyWebView"
                Shadow="{Shadow Radius=16, Opacity=0.2}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
